{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "requireConfigFile": false,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "amd":      true,
    "browser":  true,
    "commonjs": true,
    "es6":      true,
    "jasmine":  true,
    "node":     true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": ["error", 100],
    "max-statements": ["error", 40],
    "no-unused-vars": [
      "error", {
        "vars": "local",
        "varsIgnorePattern": "Example"
      }
    ]
  },
  "globals": {
    "Example": true
  }
}
